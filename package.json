{
  "name": "npmlens-mcp",
  "version": "0.1.5",
  "description": "NPMLens MCP: a server exposing tools to search npm packages and fetch READMEs.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": "./dist/index.js",
  "bin": {
    "npmlens-mcp": "dist/index.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rakeshmenon/npmlens-mcp.git"
  },
  "homepage": "https://github.com/rakeshmenon/npmlens-mcp",
  "bugs": {
    "url": "https://github.com/rakeshmenon/npmlens-mcp/issues"
  },
  "author": "rakeshmenon",
  "keywords": [
    "mcp",
    "model-context-protocol",
    "npm",
    "search",
    "readme",
    "packages",
    "cli"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "prepare": "husky",
    "prepublishOnly": "pnpm build",
    "typecheck": "tsc -p tsconfig.eslint.json --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "demo:search": "tsx src/cli.ts search",
    "demo:readme": "tsx src/cli.ts readme",
    "demo:info": "tsx src/cli.ts info",
    "demo:downloads": "tsx src/cli.ts downloads",
    "demo:snippet": "tsx src/cli.ts snippet",
    "lint": "pnpm typecheck && eslint . --max-warnings=0",
    "lint:fix": "pnpm typecheck && eslint . --fix --max-warnings=0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "lru-cache": "^10.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitest/coverage-v8": "2.1.9",
    "eslint": "^9.14.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "tsx": "^4.15.7",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.8.0",
    "vitest": "^2.1.4"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --max-warnings=0 --fix",
      "vitest related --run"
    ]
  },
  "engines": {
    "node": ">=18.17"
  }
}
