{
  "name": "npmlens-mcp",
  "version": "0.1.0",
  "description": "NPMLens MCP: a server exposing tools to search npm packages and fetch READMEs.",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "npmlens-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "dev": "tsx src/index.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "coverage": "vitest run --coverage",
    "demo:search": "tsx src/cli.ts search",
    "demo:readme": "tsx src/cli.ts readme",
    "demo:info": "tsx src/cli.ts info",
    "demo:downloads": "tsx src/cli.ts downloads",
    "demo:snippet": "tsx src/cli.ts snippet",
    "lint": "eslint . --max-warnings=0",
    "lint:fix": "eslint . --fix --max-warnings=0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "lru-cache": "^10.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.30",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "@vitest/coverage-v8": "2.1.9",
    "eslint": "^9.14.0",
    "tsx": "^4.15.7",
    "typescript": "^5.4.5",
    "typescript-eslint": "^8.8.0",
    "vitest": "^2.1.4"
  },
  "engines": {
    "node": ">=18.17"
  }
}
